# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/universal_app"

# Auth
NEXTAUTH_SECRET="your-secret-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# AI Provider (choose one: openrouter or deepseek)
AI_PROVIDER="openrouter"  # or "deepseek"

# OpenRouter API (支持多种模型: Claude, GPT-4, etc.)
OPENROUTER_API_KEY="your-openrouter-api-key"
# 可选: 指定模型，默认使用 anthropic/claude-3.5-sonnet
# AI_MODEL="anthropic/claude-3.5-sonnet"

# DeepSeek API (国产高性价比)
DEEPSEEK_API_KEY="your-deepseek-api-key"
# 可选: 指定模型，默认使用 deepseek-chat
# AI_MODEL="deepseek-chat"

# Supabase (optional, for realtime sync)
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
