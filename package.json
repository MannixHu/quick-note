{
  "name": "universal-app",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@app/web",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "biome format . --write",
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "pnpm --filter @app/db db:migrate",
    "db:studio": "pnpm --filter @app/db db:studio",
    "prepare": "husky",
    "commit": "cz"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.27.10",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": ["biome check --write --no-errors-on-unmatched"]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
