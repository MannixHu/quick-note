generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  phone         String?   @unique  // For SMS login
  password      String?   // Hashed password for credentials login
  image         String?
  accounts      Account[]
  sessions      Session[]

  // Quick Record relations
  timeBlockCategories TimeBlockCategory[]
  timeBlocks          TimeBlock[]
  questionAnswers     QuestionAnswer[]
  dailyQuestions      UserDailyQuestion[]
  questionRatings     QuestionRating[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// Example business model
model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  published Boolean  @default(false)
  authorId  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================
// Quick Record Service Models
// ============================================

// Time Block Categories (e.g., longTerm, work, rest, exercise)
model TimeBlockCategory {
  id          String   @id @default(cuid())
  name        String   // e.g., "longTerm", "work", "rest"
  label       String   // Display name: "长期目标", "工作", "休息"
  color       String   // Hex color for UI
  icon        String?  // Icon name
  sortOrder   Int      @default(0)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  timeBlocks  TimeBlock[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, name])
}

// Time Block Records
model TimeBlock {
  id          String   @id @default(cuid())
  date        DateTime @db.Date // The date of the record
  startTime   String   // "10:00" format
  endTime     String   // "11:00" format
  categoryId  String
  category    TimeBlockCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  note        String?  // Optional note

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId, date])
}

// AI Daily Questions
model DailyQuestion {
  id          String   @id @default(cuid())
  question    String   // The question text
  category    String?  // Legacy category field
  tag         String?  // INTP-based tag: thinking, introspection, learning, possibilities, optimization, social, values, action
  answers     QuestionAnswer[]
  userDaily   UserDailyQuestion[]
  ratings     QuestionRating[]

  createdAt   DateTime @default(now())
}

// User's Question Ratings (1-5 stars)
model QuestionRating {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  questionId  String
  question    DailyQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  rating      Int      // 1-5 stars

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, questionId])
  @@index([userId])
  @@index([questionId])
}

// User's Daily Question Answers
model QuestionAnswer {
  id          String   @id @default(cuid())
  questionId  String
  question    DailyQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  answer      String
  date        DateTime @db.Date // The date user answered

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, questionId, date])
}

// User's Daily Assigned Question
model UserDailyQuestion {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  questionId  String
  question    DailyQuestion @relation(fields: [questionId], references: [id])
  date        DateTime @db.Date
  answered    Boolean  @default(false)

  createdAt   DateTime @default(now())

  @@unique([userId, date])
}

// SMS Verification Codes
model SmsVerification {
  id          String   @id @default(cuid())
  phone       String
  code        String
  type        String   // "login" | "register" | "reset_password"
  expires     DateTime
  used        Boolean  @default(false)

  createdAt   DateTime @default(now())

  @@index([phone, code])
}

// Email Verification Codes
model EmailVerification {
  id          String   @id @default(cuid())
  email       String
  code        String   // 6-digit verification code
  type        String   // "register" | "reset_password"
  expires     DateTime // 10 minutes expiry
  used        Boolean  @default(false)
  attempts    Int      @default(0) // Failed verification attempts

  createdAt   DateTime @default(now())

  @@index([email, code])
  @@index([email, type])
}
