{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".env", ".env.local", "tsconfig.json"],
  "globalEnv": ["NODE_ENV", "CI"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "DATABASE_URL",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "AI_PROVIDER",
        "OPENROUTER_API_KEY",
        "DEEPSEEK_API_KEY",
        "AI_MODEL"
      ]
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "check": {
      "outputs": [],
      "cache": true
    },
    "type-check": {
      "dependsOn": ["^db:generate"],
      "outputs": [],
      "cache": true
    },
    "db:generate": {
      "inputs": ["packages/db/prisma/schema.prisma"],
      "outputs": [],
      "cache": true
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
